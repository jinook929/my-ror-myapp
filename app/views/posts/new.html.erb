<h1 class="text-3xl font-bold mb-6">New Post</h1>

<%= form_with model: @post, class: "max-w-lg space-y-4" do |form| %>
  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :title, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
  <div>
    <%= form.label :content, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :content, rows: 6, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>
  <%= form.submit "Add Post", class: "bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-700 cursor-pointer" %>
<% end %>