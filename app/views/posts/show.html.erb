<h1 class="text-3xl font-bold mb-2"><%= @post.title %></h1>
<p class="text-sm text-gray-400 mb-6">Posted on <%= @post.created_at.strftime("%B %d, %Y") %></p>

<div class="max-w-lg">
  <div class="border border-gray-300 rounded px-5 py-4">
    <p class="text-gray-700 whitespace-pre-wrap"><%= @post.content %></p>
  </div>

  <div class="mt-6 flex items-center gap-3">
    <%= link_to "Edit", edit_post_path(@post), class: "bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-700" %>
    <%= button_to "Delete", @post, method: :delete, class: "bg-red-600 text-white px-4 py-2 rounded shadow hover:bg-red-700 cursor-pointer" %>
  </div>

  <%= link_to "Back to Posts", posts_path, class: "inline-block mt-6 text-blue-600 hover:underline" %>
</div>
